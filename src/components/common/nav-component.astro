---
import { collectionCategory } from '../../layouts/base-layout.astro';

const { category } = Astro.props;
---

<ul>
  <li class={category === collectionCategory.INDEX ? 'current-page' : ''}>
    <a href="/">home</a>
  </li>
  <li class={category === collectionCategory.ABOUT ? 'current-page' : ''}>
    <a href="/about">about</a>
  </li>
  <li class={category === collectionCategory.RECIPES ? 'current-page' : ''}>
    <a href="/recipes/1">recipes</a>
  </li>
  <li class={category === collectionCategory.CONCEPTS ? 'current-page' : ''}>
    <a href="/concepts">concepts</a>
  </li>
  <li class={category === collectionCategory.TOOLS ? 'current-page' : ''}>
    <a href="/tools/1">tools</a>
  </li>
  <li class={category === collectionCategory.NOTES ? 'current-page' : ''}>
    <a href="/notes/1">notes</a>
  </li>
  {
    /*<li class={category === collectionCategory.SEARCH ? 'current-page' : ''}>
    <a href="/search">search</a>
  </li>*/
  }
</ul>
<style>
  ul {
    width: 100%;
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    font-weight: 800;

    padding: 0 0 1em 0;
  }
  li {
    font-size: 1.5rem;
    text-transform: uppercase;
    margin: 0 1rem;
  }

  li a {
    text-decoration: none;
    color: var(--text-on-light);
  }
  li:hover a {
    text-decoration: none;
    position: relative;
  }

  li:hover a::before {
    box-sizing: content-box;
    content: '';
    width: 100%;
    height: 0.5em;
    border: 2px solid var(--accent-yellow);
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: -1;
    background-color: var(--accent-blue);
  }

  li:active a::before {
    transform: translate(5%, -40%);
    transform: translateY();
  }

  .current-page {
    position: relative;
  }
  .current-page::before {
    box-sizing: content-box;
    content: '';
    width: 100%;
    height: 0.5em;
    border: 2px solid var(--accent-yellow);
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: -1;
    background-color: var(--accent-red);
  }
</style>
