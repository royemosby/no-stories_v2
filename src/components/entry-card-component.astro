---
import { formatDate } from '../utils/time';
export interface Props {
  title: string;
  date?: Date;
  description?: string;
  href: string;
  pinned?: boolean;
}

const { title, date, description, href, pinned } = Astro.props;
---

<div>
  <a href={href}>
    <article class={pinned ? 'pinned' : ''}>
      <h2>{title}</h2>
      <h3>{description}</h3>
      {date && <p>{'Updated at ' + formatDate(date)}</p>}
    </article>
  </a>
</div>

<style>
  div {
    position: relative;
    transform-style: preserve-3d;
    width: 100%;
    margin: 1rem;
    background-color: #fff;
    border: 1px solid var(--border-on-light);
    padding: 0.5rem;
    &:hover,
    &:focus {
      outline: 3px solid var(--accent-blue);
      border: 1px solid var(--accent-blue);
      &::before {
        transform: translate3d(12px, 12px, -1px);
        box-shadow: 2px 2px 3px rgba(0, 0, 0, 0.8);
      }
    }
    &:active {
      transform: translate(2px, 2px);
      outline: 4px solid var(--accent-blue);
      &::before {
        transform: translate3d(10px, 10px, -1px);
        box-shadow: 0px 0px 3px rgba(0, 0, 0, 1);
      }
    }
    &::before {
      content: '';
      position: absolute;
      inset: 0;
      transform: translate3d(10px, 10px, -1px);
      background: conic-gradient(
        from 80deg at 0% 25%,
        #f16b4d,
        #f16b4d,
        #ad2bc1,
        #ad2bc1,
        #6a0960,
        #f16b4d,
        #4b83f9,
        #f16b4d,
        #f16b4d
      );
    }
  }

  div:last-child {
    margin-bottom: 3rem;
  }

  a {
    position: relative;
    width: 100%;
    z-index: 2;
    color: var(--text-on-light);
    text-decoration: none;
  }
  a:visited {
    color: var(--text-on-light);
  }
  article {
    z-index: 2;
  }
  .pinned {
    position: relative;
  }
  .pinned::after {
    content: '';
    position: absolute;
    background-size: contain;
    background-image: url('/images/icons/pin.svg');
    height: 30px;
    width: 30px;
    z-index: 1;
    top: 0;
    right: 0;
  }
</style>
