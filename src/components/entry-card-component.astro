---
import { formatDate } from '../utils/time';
export interface Props {
  title: string;
  date?: Date;
  description?: string;
  href: string;
  pinned?: boolean;
}

const { title, date, description, href, pinned } = Astro.props;
---

<div>
  <a href={href}>
    <article class={pinned ? 'pinned' : ''}>
      <h2>{title}</h2>
      <h3>{description}</h3>
      {date && <p>{'Updated at ' + formatDate(date)}</p>}
    </article>
  </a>
</div>

<style>
  div {
    width: 100%;
    margin: 1rem;
    background-color: #fff;
    border: 1px solid var(--border-on-light);
    box-shadow: 8px 8px 0 var(--accent-red), 10px 10px 3px rgba(0, 0, 0, 0.5);
    padding: 0.5rem;
  }
  div:last-child {
    margin-bottom: 3rem;
  }
  div:hover,
  div:focus {
    box-shadow: 10px 10px 0 var(--accent-red), 12px 12px 3px rgba(0, 0, 0, 0.8);
    outline: 3px solid var(--accent-blue);
    border: 1px solid var(--accent-blue);
  }
  div:active {
    transform: translate(2px, 2px);
    outline: 4px solid var(--accent-blue);
    box-shadow: 6px 6px 0 var(--accent-red), 10px 10px 3px rgba(0, 0, 0, 1);
  }
  a {
    position: relative;
    width: 100%;
    z-index: 2;
    color: var(--text-on-light);
    text-decoration: none;
  }
  a:visited {
    color: var(--text-on-light);
  }
  article {
    z-index: 2;
  }
  .pinned {
    position: relative;
  }
  .pinned::after {
    content: '';
    position: absolute;
    background-size: contain;
    background-image: url('/images/icons/pin.svg');
    height: 30px;
    width: 30px;
    z-index: 1;
    top: 0;
    right: 0;
  }
</style>
