---
import { collectionCategory } from './base-layout.astro';
import BaseLayout from './base-layout.astro';
export interface Props {
  postTitle: string;
  postDescription: string;
  category: collectionCategory;
}
const { postTitle, postDescription, category } = Astro.props;
---

<BaseLayout
  category={category}
  pageTitle={postTitle}
  pageDescription={postDescription}
>
  <h1>{postTitle}</h1>
  <p class="sub-heading">{postDescription}</p>
  <div class="content">
    <slot />
  </div>
</BaseLayout>

<style is:global>
  .content,
  p {
    margin-bottom: 2rem;
  }
  .content p:has(img) {
    text-align: center;
  }
  .content p img {
    margin: auto;
  }
</style>
